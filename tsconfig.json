{
    "compilerOptions": {
        "lib": ["ES2019"],
        "module": "commonjs",
        "target": "ES2019",
        "baseUrl": "./",
        "outDir": "./build",
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts"
    ]
}